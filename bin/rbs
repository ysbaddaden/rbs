#! /usr/bin/env ruby
$:.unshift File.expand_path('../../lib', File.realpath(__FILE__))

require 'rbs/lexer'
require 'rbs/lexer/rewriter'
require 'rbs/parser'
require 'rbs/formatter'
require 'rbs/indenter'

lexer = RBS::Rewriter.new(RBS::Lexer.new(ARGF.read))
parser = RBS::Parser.new(lexer)
formatter = RBS::Formatter.new(parser)
indenter = RBS::Indenter.new(formatter)
puts indenter.compile(raw: false, spaces: 2)
